def menu():
    print("Window Administration Application")
    print()
    print("a: Exit application")
    print("b: Enter an attribute")
    print("c: Calculate and display the aspect ratio.")
    print("d: Display the window attributes and values")
    print()   
    
attributes = {}

while True:
    menu()
    option = input("Please choose a, b, c or d: ")
    if option == "a":
        print(" Done!")
        break
    elif option == "b" :
        name = input("Please enter the attribute name: ")
        value = int(input("Please enter the attribute value: "))
        attributes[name] = value
        print(f'{name}:{value} have been added to the dictionary.')
    elif option == "c" :
        if 'width' in attributes.keys():
            pass
        else:
            print("The 'width' attribute is missing. Please add the attribute.")
            continue
        if 'height' in attributes.keys():
            pass
        else:
            print("The 'height' attribute is missing. Please add the attribute.")
            continue
        try:
            w = int(attributes.get('width'))
            h = int(attributes.get('height'))
            res = float(w / h)
        except ZeroDivisionError:
            print("The height attribute cannot be zero. Please re-enter the attribute as a positive number.")
        else:
            print('The aspect ratio is %.2f!' % res)
    elif option == "d" :
        print("Displaying the attributes and values selected")
        for name, value in attributes.items():
            print(name, ":", value)
        loop=False
    else:
        print("Only a, b, c or d are acceptable")
