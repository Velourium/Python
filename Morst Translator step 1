from morse import alpha_to_morse
from morse import morse_to_alpha

def menu():
    print("Mose Code Translator")
    print()
    print("0: Exit ")
    print("1: Translate a word into Morse Code")
    print("2: Translate Morse Code to text.")
    print()
    

   
while True:
    menu()
    option = input("Please make a selection: ")
    if option == "0":
        print(" Done!")
        break
    elif option == "1" :
        message = input("Please enter a letter to be translated to Morse Code: ")
        code = alpha_to_morse[message.upper()]
        print(code)
    elif option == "2" :
        message = input("Please enter Morse Code to be translated to letters: ")
        letter = morse_to_alpha[message]
        print(letter)
    else:
        print("**** Selection Error *****")
        print(f"{option} is not recognized.")
        print("Please enter 0, 1, or 2.")
