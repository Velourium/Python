class Gradebook:
    
    stuCount = 0
    def __init__(self, name):  
        # Gradebook Student
        Gradebook.stuCount += 1
        self.name = name
        self.grades = [] #the quiz scores for the student
        print(f'        There are {Gradebook.stuCount} students in the Gradebook.')
        print(" ")
    def quizScore(self, score):
            self.grades.append(score)
    def currentAverage(self):
        try:
            average = sum(self.grades) / len(self.grades)
            return average
        except ZeroDivisionError:
            return 0.0
