import Garg
Garg.Gradebook()

stu1 = Gradebook(
    name = input(f'        Enter the name for Student {Gradebook.stuCount +1} :'))
stu2 = Gradebook(
    name = input(f'        Enter the name for Student {Gradebook.stuCount +1} :'))

def menu():
    print(" ")
    print("        Grade Book")
    print(" ")
    print("        0: Exit ")
    print("        1: Enter quiz grade for Student 1")
    print("        2: Enter quiz grade for Student 2")
    print("        3: Display current grades for all students")
    print(" ")

while True:
    menu()
    option = input("        Please enter a choice: ")
    if option == "0":
        print("Goodbye!")
        break
    elif option == "1" :
        try:
            stu1.quizScore(score = int(input('        Please enter a quiz score for Student 1: ')))
        except ValueError:
            print(" ")
            print("        Input must be an integer!")
    elif option == "2" :
        try:
            stu2.quizScore(score = int(input('        Please enter a  quiz score for Student 2: ')))
        except ValueError:
            print(" ")
            print("Input must be an number!")
    elif option == "3" :
        stu1.currentAverage()
        stu2.currentAverage()
        print(" ")
        print(f'         Current Average for {stu1.name}:  {stu1.currentAverage()}')
        print(" ")
        print(f'         Current Average for {stu2.name}: {stu2.currentAverage()}')
        print(" ")
    else:
        print("        **** Selection Error *****")
        print(f"        {option} is not recognized.")
        print("        Please enter 0, 1, 2, or 3")
        
