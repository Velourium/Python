bird_list = ["raven", "crow", "hawk", "chocobo"]
for bird in bird_list:
    print(f'    {bird}')
add_bird = input("Please add a bird to the list: ")
bird_list.append(add_bird)
bird_list.sort()
for bird in bird_list:
    print(f'    {bird}')
bird_delete = bird_list.pop(2)
print(f'The {bird_delete} has been removed from the list.')
value_delete = input("Please remove another bird from the list: ")
bird_list.remove(value_delete)
for bird in bird_list:
    print(f'    {bird}')
